IMAGE_NAME=volumized-dev:latest
CONTAINER_NAME=proj-dev
VOLUME_NAME=proj-vol
# Optional: set to empty to skip
GIT_CLONE_URL=https://github.com/user/your-repo.git
GIT_TOKEN=your_token
# Ports to publish (host:container)
PORTS="3000:3000 8000:8000 8080:8080"
# Platform (arm64 is native on Apple Silicon)
PLATFORM=linux/arm64

SSH_PRIVATE_KEY_PATH=~/.ssh/id_yourkey
SSH_PUBLIC_KEY_PATH=~/.ssh/id_yourkey.pub
# Optional: custom SSH config to copy (leave empty to auto-generate a minimal one)
SSH_CONFIG_PATH=

# GPG secret/public key files (ASCII-armored .asc recommended)
GPG_PRIVATE_KEY_PATH=~/.gnupg/private.key.asc
GPG_PUBLIC_KEY_PATH=~/.gnupg/public.key.asc
# Passphrase for the GPG secret key (optional; leave empty to be prompted via pinentry)
GPG_PASSPHRASE=

# Set your Git identity for signing
GIT_USER_NAME=Your Name
GIT_USER_EMAIL=you@localhost.tld
# GPG key fingerprint or key ID (e.g. 40-hex chars). If empty, script will infer after import.
GIT_GPG_SIGNING_KEY=

# --- Optional: forward the host SSH agent instead of copying keys ---
# Set to "true" to mount the host SSH agent socket into the container.
FORWARD_SSH_AGENT=false
